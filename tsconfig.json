{
  "compilerOptions": {
    "pretty": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,

    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "skipLibCheck": true,

    "preserveConstEnums": true,
    "newLine": "lf",

    "types": [
      "node"
    ],
    "lib": [
        "dom",
        "es2017"
    ],
    "outDir": "./dist",
  },
  "exclude": [
    "cmd",
    "esm",
    "coverage",
    "old",
    "dist",
    ".felint",
    ".milti_hooks",
    "**/test/**/*.spec.ts"
  ],
  "compileOnSave": true
}
